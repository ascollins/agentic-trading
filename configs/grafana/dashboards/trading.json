      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "thresholdsStyle": { "mode": "line+area" }
          },
          "thresholds": {
            "steps": [
              { "value": null, "color": "transparent" },
              { "value": 0.5, "color": "red" }

      },
      "options": {
        "graphMode": "none",
        "textMode": "auto",
        "colorMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "title": "Portfolio Drawdown",
      "description": "How far the portfolio has fallen from its highest point. Green < 5%, Yellow 5-10%, Red > 15%. This is the primary risk gauge.",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "trading_drawdown_pct",
          "legendFormat": "drawdown",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 0.3,
          "thresholds": {
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.05, "color": "yellow" },
              { "value": 0.10, "color": "orange" },
              { "value": 0.15, "color": "red" }
            ]
          }
        }
      }
    },
    {

# ===================================================================
# Agentic Trading Platform - Environment Configuration
# ===================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ===================================================================

# --- Mode ---
TRADING_MODE=backtest  # backtest, paper, live

# --- Safety Gates (REQUIRED for live trading) ---
# I_UNDERSTAND_LIVE_TRADING=true  # Uncomment ONLY when ready for live

# --- Exchange API Keys ---
# Binance
TRADING_BINANCE_API_KEY=
TRADING_BINANCE_SECRET=
TRADING_BINANCE_TESTNET=true

# Bybit
TRADING_BYBIT_API_KEY=
TRADING_BYBIT_SECRET=
TRADING_BYBIT_TESTNET=true

# --- Infrastructure ---
TRADING_REDIS_URL=redis://localhost:6379/0
TRADING_POSTGRES_URL=postgresql+asyncpg://trading:trading@localhost:5432/trading

# --- Observability ---
TRADING_OBSERVABILITY__LOG_LEVEL=INFO
TRADING_OBSERVABILITY__METRICS_PORT=9090

# --- Risk (override defaults) ---
# TRADING_RISK__MAX_DAILY_LOSS_PCT=0.05
# TRADING_RISK__MAX_DRAWDOWN_PCT=0.15
# TRADING_RISK__MAX_PORTFOLIO_LEVERAGE=3.0

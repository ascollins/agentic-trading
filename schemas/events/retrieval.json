{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentic-trading/schemas/events/retrieval.json",
  "title": "RetrievalEvent",
  "description": "A data retrieval operation (candle fetch, fact table query, memory lookup, etc.).",
  "version": 1,
  "type": "object",
  "required": ["event_id", "trace_id", "span_id", "tenant_id", "actor", "component", "timestamp", "schema_version", "event_type", "payload"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "trace_id": { "type": "string", "format": "uuid" },
    "span_id": { "type": "string", "format": "uuid" },
    "tenant_id": { "type": "string", "default": "default" },
    "actor": { "type": "string" },
    "component": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "input_hash": { "type": "string" },
    "output_hash": { "type": "string" },
    "schema_version": { "type": "integer", "minimum": 1 },
    "event_type": { "type": "string", "const": "retrieval" },
    "causation_id": { "type": "string" },
    "payload": {
      "type": "object",
      "properties": {
        "source": { "type": "string", "description": "Data source name (e.g. 'bybit', 'fact_table', 'memory_store')" },
        "query": { "type": "string", "description": "Query or request description" },
        "result_count": { "type": "integer", "description": "Number of results returned" },
        "cache_hit": { "type": "boolean", "description": "Whether the result was served from cache" }
      }
    },
    "latency_ms": { "type": ["number", "null"] },
    "error": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}

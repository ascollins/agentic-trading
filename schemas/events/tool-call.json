{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentic-trading/schemas/events/tool-call.json",
  "title": "ToolCallEvent",
  "description": "A tool/exchange call made via the ToolGateway (submit_order, cancel_order, etc.).",
  "version": 1,
  "type": "object",
  "required": ["event_id", "trace_id", "span_id", "tenant_id", "actor", "component", "timestamp", "schema_version", "event_type", "payload"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "trace_id": { "type": "string", "format": "uuid" },
    "span_id": { "type": "string", "format": "uuid" },
    "tenant_id": { "type": "string", "default": "default" },
    "actor": { "type": "string" },
    "component": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "input_hash": { "type": "string" },
    "output_hash": { "type": "string" },
    "schema_version": { "type": "integer", "minimum": 1 },
    "event_type": { "type": "string", "const": "tool_call" },
    "causation_id": { "type": "string" },
    "payload": {
      "type": "object",
      "properties": {
        "tool_name": { "type": "string", "description": "Name of the tool called" },
        "params": { "type": "object", "description": "Tool call parameters" },
        "result": { "type": "object", "description": "Tool call result" },
        "success": { "type": "boolean" },
        "idempotency_key": { "type": "string" }
      }
    },
    "latency_ms": { "type": ["number", "null"] },
    "error": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}

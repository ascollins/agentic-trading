{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentic-trading/schemas/events/validation.json",
  "title": "ValidationEvent",
  "description": "A schema or data validation check (reconciliation, integrity check, etc.).",
  "version": 1,
  "type": "object",
  "required": ["event_id", "trace_id", "span_id", "tenant_id", "actor", "component", "timestamp", "schema_version", "event_type", "payload"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "trace_id": { "type": "string", "format": "uuid" },
    "span_id": { "type": "string", "format": "uuid" },
    "tenant_id": { "type": "string", "default": "default" },
    "actor": { "type": "string" },
    "component": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "input_hash": { "type": "string" },
    "output_hash": { "type": "string" },
    "schema_version": { "type": "integer", "minimum": 1 },
    "event_type": { "type": "string", "const": "validation" },
    "causation_id": { "type": "string" },
    "payload": {
      "type": "object",
      "properties": {
        "validation_type": { "type": "string", "description": "Type of validation (e.g. 'schema', 'reconciliation', 'integrity')" },
        "schema_name": { "type": "string", "description": "Name of the schema or rule set validated against" },
        "passed": { "type": "boolean" },
        "errors": { "type": "array", "items": { "type": "string" }, "description": "Validation error messages" }
      }
    },
    "latency_ms": { "type": ["number", "null"] },
    "error": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}

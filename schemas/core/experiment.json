{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentic-trading/schemas/core/experiment.json",
  "title": "Experiment",
  "description": "Backtest or optimization experiment record. System of record: PostgreSQL (experiment_logs).",
  "version": 1,
  "type": "object",
  "required": ["experiment_id", "name", "strategy_id", "config", "symbols", "timeframes", "start_date", "end_date", "initial_capital", "status", "started_at"],
  "properties": {
    "experiment_id": { "type": "string", "description": "Unique experiment identifier" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "strategy_id": { "type": "string" },
    "config": { "type": "object", "description": "Full strategy config snapshot" },
    "symbols": { "type": "array", "items": { "type": "string" } },
    "timeframes": { "type": "array", "items": { "type": "string" } },
    "start_date": { "type": "string" },
    "end_date": { "type": "string" },
    "initial_capital": { "type": "string" },
    "final_equity": { "type": "string" },
    "total_return_pct": { "type": "string" },
    "sharpe_ratio": { "type": "string" },
    "sortino_ratio": { "type": "string" },
    "max_drawdown_pct": { "type": "string" },
    "win_rate": { "type": "string" },
    "profit_factor": { "type": "string" },
    "total_trades": { "type": "integer" },
    "avg_trade_duration_minutes": { "type": "string" },
    "results_json": { "type": "object" },
    "equity_curve": { "type": "object" },
    "git_sha": { "type": "string", "description": "Code version for reproducibility" },
    "random_seed": { "type": "integer" },
    "status": { "type": "string", "enum": ["running", "completed", "failed"] },
    "error_message": { "type": "string" },
    "started_at": { "type": "string", "format": "date-time" },
    "completed_at": { "type": ["string", "null"], "format": "date-time" },
    "tenant_id": { "type": "string", "default": "default" }
  },
  "additionalProperties": false
}
